<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Кнопка: цифры (тёмно-серые) -->
    <style name="CalcButton">
        <item name="android:layout_width">5mm</item>
        <item name="android:layout_height">5mm</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Кнопка: служебные (светло-серые: C, ±, %) -->
    <style name="CalcButtonGray" parent="CalcButton">
        <item name="android:backgroundTint">#A5A5A5</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Кнопка: действия (оранжевые: + − × ÷ =) -->
    <style name="CalcButtonOrange" parent="CalcButton">
        <item name="android:backgroundTint">#FF9500</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
